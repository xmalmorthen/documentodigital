<!DOCTYPE html>
<html lang="es">
    <head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Dir. Transportes</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui")
        
        <link href="@Url.Content("~/Content/Loaders.css")" rel="stylesheet" type="text/css" />
    </head>
    <body>    
        <div id='refresh_loader' style="display:none;position: absolute;right: 50px;top: 50px; z-index:9999;" >
            <div id='refresh_block_1' class='refresh_block'></div>
            <div id='refresh_block_2' class='refresh_block'></div>
            <div id='refresh_block_3' class='refresh_block'></div>
        </div>


        <header>
            <div class="content-wrapper">
                <div class="float-left" style="width:50%;">
                    <p class="site-title">Trámites digitales Dirección de Transportes</p>
                </div>
                <div class="float-right" style="margin-top: 30px;">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    @if (Request.IsAuthenticated)
                    {
                    <nav style="float:right;">
                        <ul id="menu">
                            <li>@Html.ActionLink("Buscar", "Index", "Home")</li>
                            @if (Convert.ToBoolean(User.Identity.Name.Split('~')[2]))
                            {
                                <li>Administración
                                    <ul>
                                        <li>@Html.ActionLink("Usuarios", "usuarios", "administracion")</li>
                                        <li>@Html.ActionLink("Nodos", "nodos", "administracion")</li>
                                        <li style="border-top: 1px solid #888;">@Html.ActionLink("Asignar nodos a un usuario", "usuarios_nodos", "administracion")</li>
                                    </ul>
                                </li>
                            }
                        </ul>
                    </nav>
                    }
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Trámites digitales Dirección de Transportes</p>
                </div>
            </div>
        </footer>
        
        @RenderSection("scripts", required: false)
    </body>

<script type="text/javascript">
    var loader = {
        loaderobj: $("#refresh_loader"),
        show: function() {
            var newtop = $('body').scrollTop() + 50;
            this.loaderobj.css({ top: newtop });
            this.loaderobj.show();
        },
        hide: function() {
            this.loaderobj.hide();
        }
    };

    $(function () {

        $(window).scroll(function () {
            var newtop = $('body').scrollTop() + 50;
            loader.loaderobj.stop().animate({ 'top': newtop }, 200);
        });
    });
    
</script>


</html>
